<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sarthak Mehrish"
        android:id="@+id/item_friends_username"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_friends_image"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Male"
        android:id="@+id/item_friends_gender"
        android:layout_below="@+id/item_friends_username"
        android:layout_toRightOf="@+id/item_friends_image"
        android:layout_marginTop="3dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/item_friends_image"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>
</RelativeLayout>